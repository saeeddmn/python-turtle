#this project draws a beautiful pattern with colorful lines in python
# import turtle library
import turtle             
colors = [ "red","purple","blue","green","orange","pink"]
my_pen = turtle.Pen()
turtle.bgcolor("black")
for x in range(360):
   my_pen.pencolor(colors[x % 6])
   my_pen.width(x/100 + 1)
   my_pen.forward(x)
   my_pen.left(59)
